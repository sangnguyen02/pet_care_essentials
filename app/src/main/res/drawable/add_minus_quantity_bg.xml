<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorControlHighlight" /> <!-- Màu nền khi nhấn -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền mặc định -->
        </shape>
    </item>
</selector>
